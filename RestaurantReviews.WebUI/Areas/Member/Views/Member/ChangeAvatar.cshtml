@model RestaurantReviews.Models.Entities.Identity.AppUser
@{
    ViewBag.Title = "ChangeAvatar";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Şifre Değiştir</h6>
    </div>
    @* ----- BEGIN ADD RESTAURANT FORM ----- *@
    <div class="card-body">
        @* ----- BEGIN Mevcut Profil Resmi ----- *@
        <div class="row">
            <div class="col-20">
                <label><strong>Profil Resmi:</strong></label>
            </div>
            <div class="col-60">
                <img id="profile-pic" src="@Model.ProfilePicPath" />
            </div>
        </div>
        @* ----- END Mevcut Profil Resmi ----- *@
        <br />
        @* ----- BEGIN Yeni Profil Resmi ----- *@
        <div class="row">
            <div class="col-20">
                <label for="UserProfilePicNew"><strong>Yeni Profil Resmi:</strong></label>
            </div>
            <div class="col-60">
                <input type="file" id="user-profile-pic-new" name="UserProfilePicNew">
            </div>
        </div>
        @* ----- END Yeni Profil Resmi ----- *@

        @* ----- BEGIN Submit Button ----- *@
        <div class="row">
            <div class="col-20">
            </div>
            <div class="col-60">
                <input type="submit" value="Değiştir" id="update-profile-pic">
            </div>
        </div>
        @* ----- END Submit Button ----- *@
    </div>
    @* ----- END ADD RESTAURANT FORM ----- *@
</div>
<script src="~/Areas/Member/Scripts/Member/ChangeAvatar.js"></script>