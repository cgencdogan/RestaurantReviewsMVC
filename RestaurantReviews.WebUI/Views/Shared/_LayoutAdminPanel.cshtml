@using System.Web.Optimization
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Panel | Restoran İnceleme</title>
    @Styles.Render("~/bundles/panelcss")
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    @Scripts.Render("~/bundles/panelheadjs")
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            @if (User.IsInRole("admin")) {
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/yonetim-paneli/genel-gorunum">
                    <div class="sidebar-brand-icon">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3">Restoran İnceleme</div>
                </a>

            }
            else {
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/profil">
                    <div class="sidebar-brand-icon rotate-n-15">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3">Restoran İnceleme</div>
                </a>
            }


            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                @if (User.IsInRole("admin")) {
                    <a class="nav-link" href="/yonetim-paneli/genel-gorunum">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Genel Görünüm</span>
                    </a>
                }
                <a class="nav-link" href="/profil">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Hesap Bilgileri</span>
                </a>
            </li>

            @if (User.IsInRole("admin")) {
                <!-- Divider -->
                <hr class="sidebar-divider">


                <!-- BEGIN Admin Menü -->
                <!-- Heading -->
                <div class="sidebar-heading">
                    Yönetim İşlemleri
                </div>
                <!-- Nav Item - Restoranlar Collapse Menu -->
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                        <i class="fas fa-fw fa-map-marker-alt"></i>
                        <span>Restoranlar</span>
                    </a>
                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Restoran İşlemleri:</h6>
                            <a class="collapse-item" href="/yonetim-paneli/restoran-listesi?pageNumber=0">Tüm Restoranlar</a>
                            <a class="collapse-item" href="/yonetim-paneli/restoran-ekle">Restoran Ekle</a>
                            <a class="collapse-item" href="/yonetim-paneli/pasif-restoran-listesi?pageNumber=0">Pasif Restoranlar</a>
                        </div>
                    </div>
                </li>

                <!-- Nav Item - Kullanıcılar Collapse Menu -->
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUsers" aria-expanded="true" aria-controls="collapseUtilities">
                        <i class="fas fa-fw fa-users"></i>
                        <span>Kullanıcılar</span>
                    </a>
                    <div id="collapseUsers" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Kullanıcı İşlemleri:</h6>
                            <a class="collapse-item" href="/yonetim-paneli/kullanici-listesi?confirmed=true&pageNumber=0">Aktif Kullanıcılar</a>
                            <a class="collapse-item" href="/yonetim-paneli/pasif-kullanici-listesi?pageNumber=0">Pasif Kullanıcılar</a>
                            <a class="collapse-item" href="/yonetim-paneli/kullanici-listesi?confirmed=false&pageNumber=0">Onay Bekleyen Kullanıcılar</a>
                        </div>
                    </div>
                </li>

                <!-- Nav Item - Yorumlar Collapse Menu -->
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities" aria-expanded="true" aria-controls="collapseUtilities">
                        <i class="fas fa-fw fa-comments"></i>
                        <span>Yorumlar</span>
                    </a>
                    <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Yorum İşlemleri:</h6>
                            <a class="collapse-item" href="/yonetim-paneli/yorum-listesi?confirmed=true&pageNumber=0">Onaylanmış Yorumlar</a>
                            <a class="collapse-item" href="/yonetim-paneli/yorum-listesi?confirmed=false&pageNumber=0">Onay Bekleyen Yorumlar</a>
                        </div>
                    </div>
                </li>

                <!-- Nav Item - Kategoriler Collapse Menu -->
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseCategories" aria-expanded="true" aria-controls="collapseUtilities">
                        <i class="fas fa-fw fa-clone"></i>
                        <span>Kategoriler</span>
                    </a>
                    <div id="collapseCategories" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Kategori İşlemleri:</h6>
                            <a class="collapse-item" href="/yonetim-paneli/kategori-listesi">Tüm Kategoriler</a>
                        </div>
                    </div>
                </li>

                <!-- Nav Item - Servisler Collapse Menu -->
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseFeatures" aria-expanded="true" aria-controls="collapseUtilities">
                        <i class="fas fa-fw fa-cocktail"></i>
                        <span>Servisler</span>
                    </a>
                    <div id="collapseFeatures" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <h6 class="collapse-header">Servis İşlemleri:</h6>
                            <a class="collapse-item" href="/yonetim-paneli/servis-listesi">Tüm Servisler</a>
                        </div>
                    </div>
                </li>
                <!-- END Admin Menü -->
                <!-- BEGIN Hesap İşlemleri-->
            }


            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Kullanıcı İşlemleri
            </div>

            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="/kullanici-islemleri/eposta-degistir">
                    <i class="fas fa-fw fa-envelope"></i>
                    <span>E-posta Değiştir</span>
                </a>
            </li>

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="/kullanici-islemleri/sifre-degistir">
                    <i class="fas fa-fw fa-key"></i>
                    <span>Şifre Değiştir</span>
                </a>
            </li>

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="/kullanici-islemleri/profil-resmi-degistir">
                    <i class="fas fa-fw fa-portrait"></i>
                    <span>Profil Resmi Değiştir</span>
                </a>
            </li>

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" href="/kullanici-islemleri/yorumlar?pageNumber=0">
                    <i class="fas fa-fw fa-comment"></i>
                    <span>Yorumlarım</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small"><span>Hoşgeldiniz </span><strong>@HttpContext.Current.User.Identity.Name</strong></span>
                                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/profil">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profil
                                </a>
                                <a class="dropdown-item" href="/kullanici-islemleri/sifre-degistir">
                                    <i class="fas fa-key fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Şifre Değiştir
                                </a>
                                <a class="dropdown-item" href="/kullanici-islemleri/eposta-degistir">
                                    <i class="fas fa-envelope fa-sm fa-fw mr-2 text-gray-400"></i>
                                    E-Posta Değiştir
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Account/Logout">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Çıkış Yap
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    @RenderBody()

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span> Restoran İnceleme &copy; 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    @Scripts.Render("~/bundles/panelendjs")
    @*<!-- Bootstrap core JavaScript-->
        <script src="~/Scripts/AdminTemplate/bootstrap.bundle.min.js"></script>
        <!-- Core plugin JavaScript-->
        <script src="~/Scripts/AdminTemplate/jquery.easing.min.js"></script>
        <!-- Custom scripts for all pages-->
        <script src="~/Scripts/AdminTemplate/sb-admin-2.js"></script>*@
</body>

</html>
