@model RestaurantReviews.WebUI.Areas.Member.Models.DetailsVm
@{
    ViewBag.Title = "Details";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Hesap Bilgileri</h6>
    </div>
    @* ----- BEGIN PUBLIC PROFILE ----- *@
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="card m-2">
                <div class="card-header">
                    Profil Resmi
                </div>
                <div class="card-body">
                    <div class="col-60 text-right">
                        <img id="profile-pic" src="@Model.AppUser.ProfilePicPath" />
                        <br /><br />
                        <a class="btn btn-danger" id="edit-@Model.AppUser.Id" href="/kullanici-islemleri/profil-resmi-degistir" title="Profil Resmini Değiştir" style="width:200px;">
                            <i class="fas fa-fw fa-edit"></i> Değiştir
                        </a>
                    </div>
                </div>
            </div>
            <div class="card m-2" style="width:40rem;">
                <div class="card-header">
                    Kullanıcı Detayları
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td><b>Kullanıcı Adı: </b></td>
                                    <td>@Model.AppUser.UserName</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td><b>E-posta: </b></td>
                                    <td>@Model.AppUser.Email</td>
                                    <td class="text-right">
                                        <a class="btn btn-danger btn-sm" id="edit-@Model.AppUser.Id" href="/kullanici-islemleri/eposta-degistir" title="E-Mail Değiştir">
                                            <i class="fas fa-fw fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>Yorum Sayısı: </b></td>
                                    <td>@Model.ReviewCount </ td >
                                    <td class="text-right">
                                        <a class="btn btn-danger btn-sm" id="edit-@Model.AppUser.Id" href="/kullanici-islemleri/yorumlar" title="Yorumları Gör">
                                            <i class="fas fa-fw fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <hr />
                    </div>
                    <br />
                    <ul>
                        <li>
                            <a href="/kullanici-islemleri/sifre-degistir">Şifremi Değiştir</a>
                        </li>
                        <li>
                            <a href="#" id="deactivate-my-account">Hesabımı Pasife Al</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @* ----- END PUBLIC PROFILE ----- *@
</div>
<script src="~/Areas/Member/Scripts/Member/DeactivateAccount.js"></script>